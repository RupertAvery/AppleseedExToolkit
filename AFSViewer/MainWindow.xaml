<Window x:Class="AFSViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AFSViewer"
        mc:Ignorable="d"
        Background="#F0F0F0"
        d:DataContext="{d:DesignInstance local:MainWindowViewModel}"
        Title="AFS Viewer for Appleseed EX" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <local:VisibilityConverter x:Key="VisibilityConverter"></local:VisibilityConverter>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="3">
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="2" Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Open Archive" Command="{Binding OpenArchiveCommand}"></MenuItem>
            </MenuItem>
            <Label Padding="3,3,6,3">Data View:</Label>
            <ComboBox Width="100" ItemsSource="{Binding BinViewItems}" SelectedValue="{Binding BinView}">
            </ComboBox>
        </Menu>
        <TreeView Grid.Row="1" ItemsSource="{Binding Nodes}" TreeViewItem.Expanded="TreeViewItem_Expanded" SelectedItemChanged="TreeView_OnSelectedItemChanged"    Grid.Column="0">
            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <EventSetter Event="MouseDoubleClick" Handler="OnItemMouseDoubleClick" />
                </Style>
            </TreeView.ItemContainerStyle>
        </TreeView>
        <Grid Visibility="{Binding ImageVisibility}" Grid.Column="1" Grid.Row="1" Background="Black">
            <Image Stretch="None" Source="{Binding Image}"></Image>
        </Grid>
        <Grid Visibility="{Binding TextVisibility}" Grid.Column="1" Grid.Row="1">
            <Grid Visibility="{Binding BinView, Converter={StaticResource VisibilityConverter}, ConverterParameter=Item}" >
                <StackPanel>
                    <Label>Item Text 1</Label>
                    <TextBox IsReadOnly="True" Text="{Binding Item1}" FontSize="20"></TextBox>
                    <Label>Item Text 2</Label>
                    <TextBox IsReadOnly="True" Text="{Binding Item2}" FontSize="20"></TextBox>
                    <Label>Item Text 3</Label>
                    <TextBox IsReadOnly="True" Text="{Binding Item3}" FontSize="20"></TextBox>
                    <Label>Item Text 4</Label>
                    <TextBox IsReadOnly="True" Text="{Binding Item4}" FontSize="20"></TextBox>
                </StackPanel>
            </Grid>
            <TextBox Visibility="{Binding BinView, Converter={StaticResource VisibilityConverter}, ConverterParameter=Shift-JIS}" IsReadOnly="True" Text="{Binding Data}" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" FontSize="20"></TextBox>
            <TextBox Foreground="#55A" Visibility="{Binding BinView, Converter={StaticResource VisibilityConverter}, ConverterParameter=Hexadecimal}" FontFamily="Consolas" IsReadOnly="True" Text="{Binding Data}" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" FontSize="20"></TextBox>
        </Grid>
    </Grid>
</Window>
